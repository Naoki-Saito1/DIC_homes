<div>
<p id="notice"><%= notice %></p>

<h1>物件一覧</h1>

<table>
  <thead>
    <tr>
      <th>物件名</th>
      <th>賃料</th>
      <th>住所</th>
      <th>築年数</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @homes.each do |home| %>
      <tr>
        <td><%= home.name %></td>
        <td><%= home.price %>億円</td>
        <td><%= home.address %></td>
        <td><%= home.age %>年</td>
        <td><%= home.mark %></td>
        <td><%= link_to '詳細', home %></td>
        <td><%= link_to '編集', edit_home_path(home) %></td>
        <td><%= link_to '削除', home, method: :delete, data: { confirm: '本当にいいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to '新規物件追加', new_home_path %>
